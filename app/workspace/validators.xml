<?xml version="1.0"?>
<validators>
    <input>
        <rule for="number" pattern="/^-?(?:\d+(?:\.\d+)?|\.\d+)$/i"/>
        <rule for="email" pattern="/^\w(?:\.?[\w%+-]+)*@\w(?:[\w-]*\.)+?[a-z]{2,}$/i"/>
        <rule for="uri" pattern="/^[^\s:\/?#]+:(?:\/{2,3})?[^\s.\/?#]+(?:\.[^\s.\/?#]+)*(?:\/?[^\s?#]*\??[^\s?#]*(#[^\s#]*)?)?$/"/>
    </input>
    <upload>
        <rule for="image" pattern="/\.(?:bmp|gif|jpe?g|png)$/i"/>
        <rule for="document" pattern="/\.(?:docx?|pdf|rtf|txt)$/i"/>
    </upload>
</validators>
